@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inspira Libertad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 mt-5">
            <div class="container-fluid">
                <h1 class="h3 mr-5"><a class="text-success text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Inspira Libertad</a></h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="QueEs">Qué Es?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="DepAdicc">Dependencias y adicciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="Cursos">Cursos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="AtPers">Atención Personalizada</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="Retiros">Retiros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="SobreMi">Sobre Mí</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Home" asp-action="AreaPersonal">Área Personal</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <button type="button" class="btn btn-success position-relative" data-toggle="modal" data-target="#carritoModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart3 fw-bold" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>

                        <span id="spanCant" class="position-absolute top-0 start-10 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </button>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container-fluid">
        @RenderBody()
        <footer class="footer text-muted">
            &copy; 2022 - Inspira Libertad - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-success">Privacidad</a>
        </footer>
    </main>

    <!-- Modal -->
    <div class="modal fade" id="carritoModal" tabindex="-1" role="dialog" aria-labelledby="carritoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carritoModalLabel">Inspira Libertad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-carrito">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Carrito" id="btnIrAlCarrito">Ir al Carrito</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Button trigger modal -->
    <button type="button" id="btnAlerta" class="btn btn-primary invisible" data-toggle="modal" data-target="#alertaModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="alertaModal" tabindex="-1" role="dialog" aria-labelledby="alertaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carritoModalLabel">Inspira Libertad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <span id="spnAlerta"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
