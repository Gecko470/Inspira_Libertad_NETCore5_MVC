@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administración - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 mt-5">
            <div class="container-fluid">
                <h1 class="h3 mr-5"><a class="text-success text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Inspira Libertad</a></h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Adm" asp-action="Frases">Frases</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Adm" asp-action="Articulos">Artículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mr-2" asp-area="" asp-controller="Adm" asp-action="Videos">Videos</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container-fluid" style="position: relative; min-height: 80vh;">
        @RenderBody()
        <footer class="footer text-muted">
            &copy; 2022 - Inspira Libertad - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-success">Privacidad</a>
        </footer>
    </main>

    <!-- Button trigger modal -->
    <button type="button" id="btnAlerta" class="btn btn-primary invisible" data-toggle="modal" data-target="#alertaModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="alertaModal" tabindex="-1" role="dialog" aria-labelledby="alertaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carritoModalLabel">Inspira Libertad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <span id="spnAlerta">Quieres borrar el registro seleccionado?</span>
                </div>
                <div class="modal-footer">
                    <button id="btnAlertaAceptar" type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
